<Scene xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CreateShiftsController">
<AnchorPane prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="88.0" text="Logged in as: ">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button layoutX="528.0" layoutY="27.0" mnemonicParsing="false" onMouseClicked="#logout" text="Log out" />
         <Label layoutX="40.0" layoutY="122.0" prefHeight="34.0" prefWidth="106.0" text="Create shift for:">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <DatePicker layoutX="205.0" layoutY="187.0" />
         <Label layoutX="38.0" layoutY="190.0" prefHeight="18.0" prefWidth="100.0" text="Pick date:">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <Label layoutX="36.0" layoutY="290.0" prefHeight="27.0" prefWidth="104.0" text="Choose Hours: ">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <TextField alignment="CENTER" layoutX="201.0" layoutY="289.0" prefHeight="26.0" prefWidth="183.0" text="00:00-00:00">
            <font>
               <Font size="14.0" />
            </font>
         </TextField>
        <Button layoutX="14.0" layoutY="40.0" mnemonicParsing="false" onMouseClicked="#GoBackMenuR" text="←">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
         <Button onMouseClicked="#submitS" layoutX="200.0" layoutY="329.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="185.0" text="Submit" />
         <Label layoutX="36.0" layoutY="241.0" prefHeight="18.0" prefWidth="90.0" text="Task:">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <TextField layoutX="202.0" layoutY="238.0" prefHeight="26.0" prefWidth="181.0" />
         <TextField fx:id="fullname" layoutX="202.0" layoutY="127.0" prefHeight="26.0" prefWidth="179.0" promptText="Full Name" />
         <Button layoutX="401.0" layoutY="128.0" mnemonicParsing="false" onMouseClicked="#confirm" text="Confirm" />
         <Label fx:id="foundor" layoutX="205.0" layoutY="156.0" prefHeight="18.0" prefWidth="170.0" text="">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
    </children></AnchorPane>

</Scene>
